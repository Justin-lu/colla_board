<% content_for :title do %>项目列表<% end %>

<div class="actions-bar">
  <%= link_to "新增项目", new_project_path, class: "btn" %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Created At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |p| %>
      <tr>
        <td><%= link_to p.title, project_path(p) %></td>
        <td><%= p.description %></td>
        <td><%= p.created_at.to_s %></td>
        <td>
          <%= link_to "Show", project_path(p) %>
          <%= link_to "Edit", edit_project_path(p) %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
<%= paginate @projects %>
