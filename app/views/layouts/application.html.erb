<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? "#{yield(:title)} | " : "" %>CollaBoard</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>
  <div class="navbar navbar-inverse app-header">
    <div class="navbar-inner">
      <div class="container">
       
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
       
        <a class="brand" href="/">Colla</a>
       
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li><%= link_to "Project", projects_path %></li>
          </ul>
          <ul class="nav pull-right">
            <li class="nav-avatar">
              <a href="<%= user_path(current_user) %>" class="avatar" style="padding: 0 15px;">
                <%= image_tag current_user.avatar %>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <%= yield %>
</body>
</html>
